@model MVCCitybike.Models.StationCityViewModel

@{
    ViewData["Title"] = "Index";
}

<button class="btn btn-outline-secondary" onclick="changeTableBGColor('white'),changeFontColor('black'),changeFont('Arial, sans-serif'), changeFontSize(10)">Oletusasetukset</button>
<button class="btn btn-outline-secondary" onclick="changeFontSize(15)">Suurenna teksti (15px)</button>
<button class="btn btn-outline-secondary" onclick="changeFontColor('olive'), changeFont('Roboto')">Vaihda tekstin väriä ja tyyliä</button>
<button class="btn btn-outline-secondary" onclick="changeTableBGColor('lightgrey')">Muuta taulukon otsikon taustaväri</button>
<hr />
<h1>Asemaluettelo</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">
        Luo uusi
    </a>
</p>



<section class="d-flex justify-content-evenly mb-2">


    <article>
        <form asp-controller="Station" asp-action="Index" method="get">
            <p>
                <div class="input-group mb-3">
                    <select class="form-select form-select-l" asp-for="StationKaupunki" asp-items="Model.Kaupungit">
                        <option value="">Kaupunki</option>
                    </select>


                    <input type="text" class="form-control" name="SearchItem" placeholder="Aseman nimi..">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Etsi</button>
                </div>



            </p>
        </form>
    </article>

    <article id="infobox" class="alert alert-info d-inline-flex p-2">
        Data ladattu ja päivitetty onnistuneesti!
    </article>

</section>


<table class="table text-container" id="textContainer">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stations![0].FID)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                    Aseman nimi
                    <i class="fas fa-arrow-down"></i>
                    <i class="fas fa-arrow-up"></i>
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations![0].Osoite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations![0].Kaupunki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations![0].Operaattor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations![0].Kapasiteet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations![0].x) (LNG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations![0].y) (LAT)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Stations!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nimi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Osoite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kaupunki)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operaattor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kapasiteet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.x)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.y)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Muokkaa</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Lisätiedot</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Poista</a>
                </td>
            </tr>
        }
    </tbody>
</table>
